@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition

.h1-divider
  position: relative;
  width: 100%;
  height: 2px;
  background: #0091ce;
  margin: 60px 0;
  text-align: center;
  span
    display: block;
    color: #0091ce;
    padding: 3px;
  .divtext
    display: inline-block;
    text-align: center;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    top: -25px;
    h1, h2, h3
      color: #0091ce;
      display: inline-block;
      font-size: 30px;
      padding: 5px 10px;
      text-transform: uppercase;
      background: #fafafa;

.owl-carousel
  .owl-item
    height: 95px;
    display: table;

.jumbotron__wrapper
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 0.7);
  will-change: transform, opacity;

.jumbotron__image
  max-height: 100vh;
  max-width: 100vw;
