@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition

.h1-divider
  position: relative;
  width: 100%;
  height: 2px;
  background: #0091ce;
  margin: 60px 0;
  text-align: center;
  span
    display: block;
    color: #0091ce;
    padding: 3px;
  .divtext
    display: inline-block;
    text-align: center;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    top: -25px;
    h1
      color: #0091ce;
      display: inline-block;
      font-size: 30px;
      padding: 5px 10px;
      text-transform: uppercase;
      background: #fafafa;

.owl-carousel
  .owl-item
    height: 95px;
    display: table;
